# -*- coding: cp1252 -*- 

import time         

time.strftime("%X %x") 

'19:01:34 01/03/09' 

 

try: 

    tiedosto = open("muistio.txt", "r") 

except Exception: 

    print("Oletusmuistioa ei löydy, luodaan tiedosto.") 

tiedosto = open("muistio.txt","a") 

 

while input is not "4": 

    print("Käytetään muistiota: ", tiedosto.name) 

    valinta = input("(1) Lue muistikirjaa \n" 

                    "(2) Lisää merkintä \n" 

                    "(3) Tyhjennä muistikirja \n" 

                    "(4) Vaihda muistiota \n" 

                    "(5) Lopeta \n\n" 

                    "Mitä haluat tehdä?: ") 

                     

    if valinta == "2": 

        teksti = input("Kirjoita uusi merkintä: ") 

        tiedosto.write(teksti) 

        tiedosto.write(":::") 

        tiedosto.write(time.strftime("%X %x")) 

        tiedosto.close() 

         

    elif valinta == "1": 

        tiedosto = open(tiedosto.name, "r") 

        sisalto = tiedosto.read() 

        print(sisalto) 

    elif valinta == "4": 

        tiedosto = input("Anna tiedoston nimi: ") 

        try: 

            tiedosto = open(tiedosto, "r") 

            continue 

        except Exception: 

            print("Tiedostoa ei löydy, luodaan tiedosto.") 

            tiedosto = open(tiedosto, "w") 

            continue 

             

         

         

             

    elif valinta == "5": 

        print("Lopetetaan.") 

        break 

    elif valinta == "3": 

        tiedosto = open("muistio.txt","w") 

        teksti = "" 

        print("Muistio tyhjennetty.") 

    else: 

        print("Tuntematon valinta.") 

        print("\n") 

 

