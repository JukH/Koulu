# -*- coding: cp1252 -*- 

import time         

time.strftime("%X %x") 

'19:01:34 01/03/09' 

tiedosto = open("muistio.txt","w") 

teksti = "" 

tiedosto.write(teksti) 

while input is not "4": 

    valinta = input("(1) Lue muistikirjaa \n" 

                    "(2) Lisää merkintä \n" 

                    "(3) Tyhjennä muistikirja \n" 

                    "(4) Lopeta \n\n" 

                    "Mitä haluat tehdä?: ") 

                     

    if valinta == "2": 

        teksti = input("Kirjoita uusi merkintä: ") 

        tiedosto.write(teksti) 

         

    elif valinta == "1": 

        if teksti is not "": 

            print(teksti,":::",time.strftime("%X %x")) 

            print("\n") 

        else: 

            continue 

         

         

         

             

    elif valinta == "4": 

        print("Lopetetaan.") 

        break 

    elif valinta == "3": 

        tiedosto = open("muistio.txt","w") 

        teksti = "" 

        print("Muistio tyhjennetty.") 

    else: 

        print("Tuntematon valinta.") 

        print("\n") 

 

