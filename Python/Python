# -*- coding: cp1252 -*- 

def jononpituus(syöte): 

    pituus = len(syöte) 

    return pituus 

def main(): 

     

    while input is not "Lopeta": 

        syöte = input("Anna syöte (Lopeta lopettaa): ") 

        pituus = jononpituus(syöte) 

        if syöte == "Lopeta": 

            break 

        if pituus > 0: 

            tulostaja(pituus) 

        else: 

            tulostaja1() 

 

 

def tulostaja(pituus): 

    print("Antamasi syöte oli", pituus, "merkkiä pitkä." ) 

     

def tulostaja1(): 

    print("Et antanut syötettä") 

     

if __name__ == "__main__": 

    main() 

 

