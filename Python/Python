# -*- coding: cp1252 -*- 

tiedosto = open("sanoja.txt", "r") 

sisalto = tiedosto.readlines() 

lista = [] 

print("Sanat laitettuna aakkosjärjestykseen:") 

for line in sisalto: 

    lista.append(line) 

lista.sort() 

 

for i in lista: 

print(i) 

 

