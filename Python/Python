9.2 

 

# -*- coding: cp1252 -*- 

ostosLista = [] 

 

while input is not "3": 

    valinta = input("Haluatko\n(1)Lisätä listaan\n(2)Poistaa listalta vai\n(3)Lopettaa?: ") 

     

    if valinta == "1": 

        lisaa = input("Mitä lisätään?: ") 

        ostosLista.append(lisaa) 

         

    elif valinta == "2": 

        print("Listalla on", ostosLista.__len__(), "alkiota.") 

        poisto = input("Monesko niistä poistetaan?: ") 

        poisto = int(poisto) 

        if len(ostosLista) == 0: 

            print("Virheellinen valinta.") 

            continue 

        elif poisto <= len(ostosLista) or poisto >= len(ostosLista): 

            ostosLista.pop(poisto) 

            continue 

         

         

    elif valinta == "3": 

        print("Listalla oli tuotteet: ") 

        for i in ostosLista: 

            print(i) 

        break 

     

    else: 

        print("Virheellinen valinta.") 

        continue 

 

