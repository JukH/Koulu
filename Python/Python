10.2 

 

# -*- coding: cp1252 -*- 

class Kilpailija: 

    pisteet = 0 

    vari = "" 

    def tilanne(self): 

        print("Olen", self.vari, "ja minulla on", self.pisteet,"pistettä!") 

        return self.pisteet 

    def maali(self): 

        self.pisteet += 1 

     

     

eka = Kilpailija() 

eka.vari = "sininen" 

eka.maali() 

eka.tilanne() 

 

10.3 

 

# -*- coding: cp1252 -*- 

class Kilpailija: 

    pisteet = 0 

    vari = "" 

    def __init__(self, vari): 

        vari = input("Anna minulle väri: ") 

        self.vari = vari 

        

    def tilanne(self): 

        print("Olen", self.vari, "ja minulla on", self.pisteet," pistettä!") 

        return self.pisteet 

    def maali(self): 

        self.pisteet += 1 

    def __doc__(self): 

        print("Kilpailija: sisältää pisteet ja värin") 

     

     

eka = Kilpailija("") 

 

toka = Kilpailija("") 

 

eka.tilanne() 

toka.tilanne() 

eka.__doc__() 

 

10.4 

 

# -*- coding: cp1252 -*- 

class Emo: 

    arvo = 0 

    tila = "Toiminnassa" 

    def nimi(self): 

        print("Minä olen emoluokka.") 

     

class Lapsi(Emo): 

    def nimi(self): 

        print("Minä olen lapsiluokka.") 

         

emo = Emo() 

print(emo.tila) 

emo.nimi() 

lapsi = Lapsi() 

print(lapsi.tila) 

lapsi.nimi() 
