# -*- coding: cp1252 -*- 

 

tiedosto = open("muistio.txt","w") 

teksti = "" 

tiedosto.write(teksti) 

while input is not "4": 

    valinta = input("(1) Lue muistikirjaa \n" 

                    "(2) Lisää merkintä \n" 

                    "(3) Tyhjennä muistikirja \n" 

                    "(4) Lopeta \n\n" 

                    "Mitä haluat tehdä?: ") 

                     

    if valinta == "2": 

        teksti = input("Kirjoita uusi merkintä: ") 

        tiedosto.write(teksti) 

    elif valinta == "1": 

         

        print(teksti) 

        print("\n") 

         

         

             

    elif valinta == "4": 

        print("Lopetetaan.") 

        break 

    elif valinta == "3": 

        print("Muistio tyhjennetty.") 

        tiedosto = open("muistio.txt","w") 

        tiedosto.close() 

    else: 

        print("Tuntematon valinta.") 

        print("\n") 

