# -*- coding: cp1252 -*- 

 

import math 

 

def testaa1(): 

    testi = False 

    while testi == False: 

        luku = input("Anna luku: ") 

        try: 

            luku = int(luku) 

            return luku 

            testi = True 

        except Exception: 

            print("Virheellinen syöte!") 

            testi = False 

         

def testaa2(): 

    testi = False 

    while testi == False: 

        luku2 = input("Anna luku: ") 

        try: 

            luku2 = int(luku2) 

            return luku2 

            testi = True 

        except Exception: 

            print("Virheellinen syöte!") 

            testi = False 

             

def testaa3(): 

    testi = False 

    while testi == False: 

        luku = input("Anna luku: ") 

        try: 

            luku = int(luku) 

            return luku 

            testi = True 

        except Exception: 

            print("Virheellinen syöte!") 

            testi = False 

             

def testaa4(): 

    testi = False 

    while testi == False: 

        luku2 = input("Anna luku: ") 

        try: 

            luku2 = int(luku2) 

            return luku2 

            testi = True 

        except Exception: 

            print("Virheellinen syöte!") 

            testi = False 

             

         

def main():         

             

    luku = testaa1() 

    luku2 = testaa2() 

     

         

    kierros = True 

     

    while kierros == True:     

     

        print("(1) +") 

        print("(2) -") 

        print("(3) *") 

        print("(4) /") 

        print("(5)sin(luku1/luku2)") 

        print("(6)cos(luku1/luku2)") 

        print("(7)Vaihda luvut") 

        print("(8)Lopeta") 

        print("Valitut luvut: ", luku, luku2) 

        valinta = input("Tee valinta (1-8): ") 

         

        if(valinta == "1"): 

            tulos = luku + luku2 

            print("Tulos on: ",tulos) 

        elif(valinta == "2"): 

            tulos = luku - luku2 

            print("Tulos on: ",tulos) 

        elif(valinta == "3"): 

            tulos = luku * luku2 

            print("Tulos on: ",tulos) 

        elif(valinta == "4"): 

            tulos = luku / luku2 

            print("Tulos on: ",tulos) 

        elif(valinta == "5"): 

            tulos = math.sin(luku/luku2) 

            print("Tulos on: ",tulos) 

        elif(valinta == "6"): 

            tulos = math.cos(luku/luku2) 

            print("Tulos on: ",tulos) 

        elif(valinta == "7"): 

            luku = testaa3() 

            luku2 = testaa4() 

            

            continue 

        elif(valinta == "8"): 

            break 

         

        else: 

            print("Valintaa ei tunnistettu.") 

            break 

         

if __name__ == "__main__": 

    main() 

 

 

