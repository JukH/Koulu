7.2 

 

# -*- coding: cp1252 -*- 

 

import random 

voitot = 0 

tappiot = 0 

tasapelit = 0 

kierrokset = 0 

 

 

while input is not "Lopeta": 

     

    valinta = input("Jalka, Ydinase vai Torakka? (Lopeta lopettaa): ") 

    if valinta == "Lopeta": 

        print("Pelasit", kierrokset, "kierrosta, joista voitit", voitot, "ja pelasit tasan", tasapelit, "peliä.") 

        break 

    else: 

        kierrokset += 1 

        print("Sinä valitsit: ", valinta) 

     

    valinta1 = random.randint(1,3) 

    if valinta1 == 1: 

        valinta1 = "Jalka" 

    if valinta1 == 2: 

        valinta1 = "Ydinase" 

    if valinta1 == 3: 

        valinta1 = "Torakka" 

         

    print("Tietokone valitsi: ", valinta1) 

     

     

    if valinta == "Jalka" and valinta1 == "Torakka": 

        print("Voitit!") 

        voitot += 1 

        continue 

    if valinta == "Jalka" and valinta1 == "Jalka": 

        print("Tasapeli!") 

        tasapelit += 1 

        continue 

    if valinta == "Jalka" and valinta1 == "Ydinase": 

        print("Hävisit!") 

        tappiot += 1 

        continue 

         

    if valinta == "Ydinase" and valinta1 == "Jalka": 

        print("Voitit!") 

        voitot += 1 

        continue 

    if valinta == "Ydinase" and valinta1 == "Ydinase": 

        print("Tasapeli!") 

        tasapelit += 1 

    if valinta == "Ydinase" and valinta1 == "Torakka": 

        print("Hävisit!") 

        tappiot += 1 

        continue 

         

    if valinta == "Torakka" and valinta1 == "Ydinase": 

        print("Voitit!") 

        voitot += 1 

        continue 

    if valinta == "Torakka" and valinta1 == "Torakka": 

        print("Tasapeli!") 

        tasapelit += 1 

        continue 

    if valinta == "Torakka" and valinta1 == "Jalka": 

        print("Hävisit!") 

        tappiot += 1 

        continue 

         

