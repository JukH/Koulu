# -*- coding: cp1252 -*- 

def jononpituus(syöte): 

    if len(syöte) < 5: 

        return 0 

    else: 

        return 1 

 

def main(): 

     

    while input is not "Lopeta": 

        syöte = input("Anna syöte (Lopeta lopettaa): ") 

        tulos = jononpituus(syöte) 

        if syöte == "Lopeta": 

            break 

        if tulos == True: 

            tulostaja(syöte) 

        else: 

            tulostaja1() 

 

 

def tulostaja(syöte): 

    print(syöte) 

     

def tulostaja1(): 

    print("Oletustulostus") 

     

if __name__ == "__main__": 

    main() 

 

